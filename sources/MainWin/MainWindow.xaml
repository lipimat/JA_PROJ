<Window x:Class="MainWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWin"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900" Background="#464b4f">
    <Grid>
        <Label Content="Original Image" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#d6dadd" FontSize="15" FontWeight="Bold" Margin="19,3,0,0"/>
        <Button Content="Upload Image" FontSize="15" FontWeight="Bold" Background="#d6dadd" Foreground="#464b4f"  Click="BrowseButton_Click" Margin="202,8,575,480"/>
        <Border  Height="300" Width="300" Margin="19,44,575,176" Background="#4e5357">
            <Image x:Name="ImageViewer1" Height="300" Width="300"/>
        </Border>

        <Border Margin="398,44,43,52" Background="#4e5357">
            <Image x:Name="ImageViewer2"/>
        </Border>
        <Label Content="Output Image" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#d6dadd" FontSize="15" FontWeight="Bold" Margin="398,3,0,0"/>
        <Button Content="RunDLL" HorizontalAlignment="Left" Margin="291,479,0,0" VerticalAlignment="Top" Width="76" Click="onClickRunDLL" FontSize="15" FontWeight="Bold" Background="#d6dadd" Foreground="#464b4f" RenderTransformOrigin="2.187,3.958"/>
        <ComboBox x:Name="ComboBox" HorizontalAlignment="Left" Margin="264,441,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="OnComboSelectionChanged">
            <ComboBoxItem Content="Assembly procedure"/>
            <ComboBoxItem Content="C++ procedure"/>
        </ComboBox>
        <Button Content="Clear image" FontSize="15" FontWeight="Bold" Background="#d6dadd" Foreground="#464b4f" HorizontalAlignment="Left" Margin="584,482,0,0" VerticalAlignment="Top" Click="OnClearImage"/>
    </Grid>
</Window>
