<Window x:Class="MainWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWin"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900" Background="#464b4f">
    <Grid>
        <TextBox x:Name="textBoxASM" HorizontalAlignment="Left" Height="23" Margin="19,396,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193"/>
        <TextBox x:Name="textBoxCPP" HorizontalAlignment="Left" Height="23" Margin="19,469,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" RenderTransformOrigin="0.942,6.783"/>
        <Label Content="Original Image" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#d6dadd" FontSize="15" FontWeight="Bold" Margin="19,3,0,0"/>
        <Button Content="Upload Image" FontSize="15" FontWeight="Bold" Background="#d6dadd" Foreground="#464b4f"  Click="BrowseButton_Click" Margin="202,8,575,480"/>
        <Border  Height="300" Width="300" Margin="19,44,575,176" Background="#4e5357">
            <Image x:Name="ImageViewer1" Height="300" Width="300"/>
        </Border>

        <Border Margin="398,44,43,52" Background="#4e5357">
            <Image x:Name="ImageViewer2"/>
        </Border>
        <Label Content="Output Image" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#d6dadd" FontSize="15" FontWeight="Bold" Margin="398,3,0,0"/>
        <Button Content="RunDLLs" HorizontalAlignment="Left" Margin="249,468,0,0" VerticalAlignment="Top" Width="76" Click="onClickRunDLLs" FontSize="15" FontWeight="Bold" Background="#d6dadd" Foreground="#464b4f" RenderTransformOrigin="2.187,3.958"/>
        <Label Content="Assembly function output:" HorizontalAlignment="Left" Margin="19,361,0,0" VerticalAlignment="Top" Foreground="#d6dadd" FontSize="15" FontWeight="Bold" RenderTransformOrigin="0.578,5.367"/>
        <Label Content="C++ function output:" HorizontalAlignment="Left" Margin="19,439,0,0" VerticalAlignment="Top" Foreground="#d6dadd" FontSize="15" FontWeight="Bold"/>
    </Grid>
</Window>
